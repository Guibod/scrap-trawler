---
import "../styles/global.css"
export interface Props {
  title: string
}
const { title } = Astro.props
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>{title} | Scrap Trawler</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="Scrap Trawler is a browser extension for Magic: The Gathering judges and TOs. It scrapes EventLink data, links to decklists, and builds event archives." />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body class="bg-gray-50 text-gray-900 font-sans min-h-screen flex flex-col relative">
    <header class="bg-white shadow px-6 py-4">
      <div class="max-w-4xl mx-auto flex justify-between items-center">
        <h1 class="text-xl font-bold">
          <a href="/" class="hover:underline">Scrap Trawler</a>
        </h1>
        <nav class="space-x-4 text-sm">
          <a href="/" class="hover:underline">Home</a>
          <a href="/privacy" class="hover:underline">Privacy policy</a>
          <a href="/terms" class="hover:underline">Terms of service</a>
          <a href="/help" class="hover:underline">Help wanted</a>
        </nav>
      </div>
    </header>

    <main class="flex-1 px-6 py-10 max-w-5xl mx-auto w-full smooth-scroll">
      <div class="absolute transform rotate-45 bg-green-600 text-center text-white font-semibold py-1 right-[-35px] top-[32px] w-[170px]">
        BETA
      </div>

      <slot />
    </main>

    <footer class="bg-white border-t text-sm text-gray-500 px-6 py-4 mt-10">
      <div class="max-w-4xl mx-auto flex justify-between">
        <span>&copy; {new Date().getFullYear()} Scrap Trawler</span>
        <span>
          <a href="/privacy" class="hover:underline">privacy policy</a>
          <a href="/terms" class="hover:underline">terms of service</a>
        </span>
        <span>
          Built with ❤️ for the MTG community.
        </span>
      </div>
    </footer>
  </body>
</html>
