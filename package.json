{
  "name": "scrap-trawler",
  "displayName": "Scrap Trawler",
  "version": "0.2.0",
  "description": "A browser extension for extracting event data from EventLink tournaments.",
  "author": "Guillaume Boddaert",
  "license": "MIT",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/Guibod/scrap-trawler.git"
  },
  "bugs": {
    "url": "https://github.com/Guibod/scrap-trawler/issues"
  },
  "homepage": "https://github.com/Guibod/scrap-trawler#readme",
  "keywords": [
    "plasmo",
    "browser-extension",
    "event-scraper",
    "graphql",
    "magic-the-gathering",
    "eventlink",
    "mtg",
    "tournament"
  ],
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package",
    "format": "biome format --write",
    "lint": "biome check",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepare": "husky",
    "sync-version": "tsx src/scripts/sync-version.ts"
  },
  "dependencies": {
    "@plasmohq/messaging": "^0.7.1",
    "bowser": "^2.11.0",
    "consola": "^3.4.0",
    "dexie": "^4.0.11",
    "graphql-request": "^6.1.0",
    "plasmo": "0.90.3",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.12",
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.304",
    "@types/node": "22.13.4",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "@typescript-eslint/eslint-plugin": "^8.24.1",
    "@typescript-eslint/parser": "^8.24.1",
    "biome": "^0.3.3",
    "eslint": "^9.20.1",
    "eslint-config-biome": "^1.9.4",
    "eslint-plugin-biome": "^0.9.19",
    "husky": "^9.1.7",
    "jsdom": "^26.0.0",
    "lint-staged": "^15.4.3",
    "tsx": "^4.19.2",
    "typescript": "5.7.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.0.5",
    "vitest-mock-extended": "^2.0.2"
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx,json,md}": "biome format --write"
  },
  "manifest": {
    "permissions": [
      "storage",
      "cookies",
      "activeTab",
      "scripting"
    ],
    "host_permissions": [
      "https://eventlink.wizards.com/*"
    ]
  }
}
